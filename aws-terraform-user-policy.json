{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EC2FullAccess",
      "Effect": "Allow",
      "Action": [
        "ec2:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested and verified working"
    },
    {
      "Sid": "IAMRoleManagement",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:GetRole",
        "iam:TagRole",
        "iam:UntagRole",
        "iam:ListRolePolicies",
        "iam:ListAttachedRolePolicies",
        "iam:GetRolePolicy",
        "iam:PutRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy"
      ],
      "Resource": [
        "arn:aws:iam::379220350808:role/dpg-infra-*"
      ],
      "Comment": "REQUIRED ONLY - Create/Delete/Get role, attach/detach policies, manage inline policies, list role policies, and tag/untag role"
    },
    {
      "Sid": "IAMInstanceProfileManagement",
      "Effect": "Allow",
      "Action": [
        "iam:CreateInstanceProfile",
        "iam:DeleteInstanceProfile",
        "iam:GetInstanceProfile",
        "iam:ListInstanceProfiles",
        "iam:TagInstanceProfile",
        "iam:UntagInstanceProfile",
        "iam:AddRoleToInstanceProfile",
        "iam:RemoveRoleFromInstanceProfile"
      ],
      "Resource": [
        "arn:aws:iam::379220350808:instance-profile/dpg-infra-*"
      ],
      "Comment": "❌ MISSING ALL - Tested CreateInstanceProfile: ACCESS DENIED, Tested ListInstanceProfiles: ACCESS DENIED - CRITICAL BLOCKER"
    },
    {
      "Sid": "IAMPolicyManagement",
      "Effect": "Allow",
      "Action": [
        "iam:CreatePolicy",
        "iam:DeletePolicy",
        "iam:GetPolicy",
        "iam:GetPolicyVersion",
        "iam:ListPolicies",
        "iam:ListPolicyVersions",
        "iam:TagPolicy",
        "iam:UntagPolicy"
      ],
      "Resource": [
        "arn:aws:iam::379220350808:policy/dpg-infra-*"
      ],
      "Comment": "PARTIAL - ✅ Have: CreatePolicy, DeletePolicy, GetPolicy | ❌ MISSING: TagPolicy, UntagPolicy"
    },
    {
      "Sid": "IAMPassRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::379220350808:role/dpg-infra-*"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "ec2.amazonaws.com",
            "lambda.amazonaws.com",
            "vpc-flow-logs.amazonaws.com"
          ]
        }
      },
      "Comment": "❌ MISSING - Not tested yet but required for EC2, Lambda, and VPC Flow Logs role assignment - CRITICAL BLOCKER"
    },
    {
      "Sid": "LambdaFullAccess",
      "Effect": "Allow",
      "Action": [
        "lambda:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested lambda functions creation works"
    },
    {
      "Sid": "EventBridgeFullAccess",
      "Effect": "Allow",
      "Action": [
        "events:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested EventBridge rules creation, ListTagsForResource, TagResource all work"
    },
    {
      "Sid": "CloudWatchLogsFullAccess",
      "Effect": "Allow",
      "Action": [
        "logs:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested log group creation and deletion works"
    },
    {
      "Sid": "ElasticLoadBalancingFullAccess",
      "Effect": "Allow",
      "Action": [
        "elasticloadbalancing:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested ALB and target group creation works"
    },
    {
      "Sid": "AutoScalingFullAccess",
      "Effect": "Allow",
      "Action": [
        "autoscaling:*"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested ASG describe operations work"
    },
    {
      "Sid": "CloudWatchMetrics",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData",
        "cloudwatch:GetMetricData",
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:ListMetrics"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Standard metrics permissions work"
    },
    {
      "Sid": "SSMAccess",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:PutParameter"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - SSM permissions work"
    },
    {
      "Sid": "STSAssumeRole",
      "Effect": "Allow",
      "Action": [
        "sts:GetCallerIdentity"
      ],
      "Resource": "*",
      "Comment": "✅ ALREADY HAVE - Tested GetCallerIdentity works"
    }
  ]
}
